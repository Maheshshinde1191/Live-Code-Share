<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Live Code Share</title>

  <!-- Bootstrap core CSS -->
  <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link rel='stylesheet' href="/stylesheets/style.css" />

</head>

<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <a class="navbar-brand nav-title" href="/">Live Code Share</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
      aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
      <ul class="navbar-nav mr-auto"></ul>


      <div class="form-inline my-1 my-lg-0">
        <input class="form-control mr-sm-2" type="text" id="cid" placeholder="Join a Collab" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" onclick="collabo()">Join</button>
      </div>
      <ul class="navbar-nav ml-4 mr-4">
        {{#if user}}
            <li class="nav-item ">
              <a class="nav-link" href="/">{{user.name}} </a>
            </li>
            <li class="nav-item ">
            <a class="nav-link" href="/logout">logout </a>
            </li>
          {{else}}
            <li class="nav-item ">
              <a class="nav-link" href="/login">Login </a>
            </li>
            <li class="nav-item ">
              <a class="nav-link" href="/register">Register </a>
            </li>
        {{/if}}
      </ul>

    </div>
  </nav>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Page Content -->


  {{{body}}}

  <!-- Bootstrap core JavaScript -->

</body>
<script>
    function collabo() {
      {{!-- console.log($("#cid").val()); --}}
        var id = $("#cid").val();
        {{!-- console.log(id); --}}
        $(location).attr('href', '/task/' + id);

      }
</script>
</html>